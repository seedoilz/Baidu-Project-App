<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 这个item定义了工具栏的白色背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <!-- 这个item定义了工具栏的黑边 -->
    <item
        android:left="-1dp"
        android:right="-1dp"
        android:top="0dp"
        android:bottom="-1dp">
        <shape android:shape="rectangle">
            <stroke
                android:color="@android:color/black"
                android:width="2dp" />
        </shape>
    </item>
</layer-list>
