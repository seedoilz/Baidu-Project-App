<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="47dp"
            android:layout_height="33dp"
            app:srcCompat="@drawable/left_arrow_black" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="新闻发布"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/publish_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="发布" />
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border"
        android:layout_below="@id/materialToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="新闻标题" />

            <EditText
                android:id="@+id/news_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="新闻摘要" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:background="@drawable/border"
                    android:id="@+id/thumbnail_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="缩略图"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/tianjiatupian"/>

                <ImageView
                    android:background="@drawable/border"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:id="@+id/headline_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="头条图片"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/tianjiatupian"/>
            </LinearLayout>

            <EditText
                android:background="@drawable/border"
                android:id="@+id/summary_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="10dp"
                android:hint="摘要文字" />

            <EditText
                android:background="@drawable/border"
                android:id="@+id/body_text"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="@dimen/dp_300"
                android:hint="正文文字" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
